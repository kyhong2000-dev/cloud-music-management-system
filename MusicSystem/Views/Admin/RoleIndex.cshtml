@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Roles</h1>
<a asp-action="RoleCreate">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    @Html.ActionLink(
                        linkText: "Delete",
                        actionName: "DeleteRole",
                        controllerName: "Admin",
                        routeValues: new {
                            name = @role.Name
                        },
                        htmlAttributes: null
                    )
                </td>
            </tr>

        }
    </tbody>
</table>